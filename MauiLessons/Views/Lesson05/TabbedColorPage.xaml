<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiLessons.Models"
             x:Class="MauiLessons.Views.Lesson05.TabbedColorPage"
             Title="{Binding Name}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="HorizontalTextAlignment" Value="End" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout Spacing="30">
        <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
            <Label Text="{Binding FriendlyName}" />
            <Label Text="{Binding Red, StringFormat='R = {0:F2}'}" />
            <Label Text="{Binding Green, StringFormat='G = {0:F2}'}" />
            <Label Text="{Binding Blue, StringFormat='B = {0:F2}'}" />
        </StackLayout>

        <BoxView Color="{Binding Color}"
                WidthRequest="100"
                HeightRequest="100"
                HorizontalOptions="Center" />

    </StackLayout>
</ContentPage>